- provide(:title, @title)
.col-lg-offset-2
  %h1 Log in

= form_tag sessions_path, class: 'form-horizontal', role: 'form' do
  .form-group
    = label_tag :email, nil, class: 'col-lg-2 control-label'
    .col-lg-8
      = text_field_tag :email, params[:email], class: 'form-control'
  .form-group
    = label_tag :password, nil, class: 'col-lg-2 control-label'
    .col-lg-8
      = password_field_tag :password, nil, class: 'form-control'
  .form-group
    .col-lg-offset-2.col-lg-10
      = submit_tag "Log in", class: "btn btn-primary"
      \-or-
      = link_to "Sign up!", signup_path, class: 'btn btn-default btn-sm'