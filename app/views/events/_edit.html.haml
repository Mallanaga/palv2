= form_for @event, html: {role: 'form'}, remote: true do |f| 
  = render 'layouts/error_messages', object: f.object
  .form-group
    = f.label :name, class: 'control-label'
    = f.text_field :name, class: 'form-control'
  %fieldset{disabled: 'disabled'}
    .form-group
      = f.radio_button :private, false
      = f.label :private, 'Public', value: false, title: 'Visible to all'
      &nbsp;&nbsp;&nbsp;
      = f.radio_button :private, true
      = f.label :private, 'Private', value: true, title: 'Visible to chosen'
    .form-group
      = f.label :location, class: 'control-label'
      = f.text_field :location, placeholder: 'Search here, or click the map to place a pin', class: 'form-control'
  .form-group.input-daterange
    = f.label :start, 'Date', class: 'control-label'
    .row
      .col-xs-6
        .input-group
          = f.text_field :startDate, class: 'form-control', placeholder: 'start'
          %span.input-group-addon
            .glyphicon.glyphicon-calendar
      .col-xs-6
        .input-group
          = f.text_field :finishDate, class: 'form-control', placeholder: 'finish'
          %span.input-group-addon
            .glyphicon.glyphicon-calendar
  .form-group.input-timerange
    .row
      .col-xs-6
        .input-group
          = f.text_field :startTime, class: 'form-control', id: 'tpstart'
          %span.input-group-addon
            .glyphicon.glyphicon-time
      .col-xs-6
        .input-group
          = f.text_field :finishTime, class: 'form-control', id: 'tpfinish'
          %span.input-group-addon
            .glyphicon.glyphicon-time
  .form-group
    = f.label :description, class: 'control-label'
    = f.text_area :description, class: 'form-control'
  .form-group
    = f.label :category_tokens, 'Tags', class: 'control-label'
    = f.text_field :category_tokens, data: {load: @event.categories}, class: 'form-control'
    
  = f.submit 'Update', class: 'btn btn-primary'
  \-or-
  = link_to 'cancel', @event, class: 'btn btn-default btn-sm', remote: true