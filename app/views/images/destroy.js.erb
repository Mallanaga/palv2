if( $("#palbum #img<%= @image.id %>").next().length) {
  $("#palbum #img<%= @image.id %>").next().addClass('active');
} else {
  $("#palbum #img<%= @image.id %>").prev().addClass('active');
}
$("#palbum #img<%= @image.id %>").remove();
$("#palbum #pre<%= @image.id %>").remove();

$('.preview').each(function(index){
  $(this).attr('data-slide-to', index);
});